<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnMantenedores"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnStockAlimentos"
        android:layout_alignRight="@+id/btnStockAlimentos"
        android:layout_below="@+id/btnStockAlimentos"
        android:layout_marginTop="10dp"
        android:text="Mantenedores" />

    <Button
        android:id="@+id/btnChat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnMantenedores"
        android:layout_alignRight="@+id/btnMantenedores"
        android:layout_below="@+id/btnMantenedores"
        android:layout_marginTop="10dp"
        android:text="Chat"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnIngreso"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:text="Nuevo Ingreso"
        android:textAlignment="center"
        android:width="300dp" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnIngreso"
        android:layout_alignRight="@+id/btnIngreso"
        android:layout_below="@+id/btnIngreso"
        android:layout_marginTop="10dp"
        android:text="BÃºsqueda"
        android:textAlignment="center"
        android:width="300dp" />

    <Button
        android:id="@+id/btnStockAlimentos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnIngreso"
        android:layout_alignRight="@+id/btnBuscar"
        android:layout_below="@+id/btnBuscar"
        android:layout_marginTop="10dp"
        android:text="Stock Alimentos"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnCalendario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnChat"
        android:layout_alignRight="@+id/btnChat"
        android:layout_below="@+id/btnChat"
        android:layout_marginTop="10dp"
        android:text="Calendario"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnCalendario"
        android:layout_alignRight="@+id/btnCalendario"
        android:layout_below="@+id/btnCalendario"
        android:layout_marginTop="10dp"
        android:text="Salir"
        android:textAlignment="center" />

</RelativeLayout>